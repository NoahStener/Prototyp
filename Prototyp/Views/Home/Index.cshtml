@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2 bg-light sidebar" style="padding: 20px 5px;">
            <h4>Menu</h4>
            <div class="mb-3">
                <label>Utbildning</label>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        Select Utbildning
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="1" id="utbildning1">
                                <label class="form-check-label" for="utbildning1">
                                    Systemutvecklare.NET
                                </label>
                            </div>
                        </li>
                        <li>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="2" id="utbildning2">
                                <label class="form-check-label" for="utbildning2">
                                    Medicinsk Sekreterare
                                </label>
                            </div>
                        </li>
                        <li>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="3" id="utbildning3">
                                <label class="form-check-label" for="utbildning3">
                                    IT Projektledare
                                </label>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="mb-3">
                <label>Termin</label>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
                        Select Termin
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                        <li>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="1" id="termin1">
                                <label class="form-check-label" for="termin1">
                                    2024
                                </label>
                            </div>
                        </li>
                        <li>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="2" id="termin2">
                                <label class="form-check-label" for="termin2">
                                    2023
                                </label>
                            </div>
                        </li>
                        <li>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="3" id="termin3">
                                <label class="form-check-label" for="termin3">
                                    2022
                                </label>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="button" id="generateDataButton">Generate Data</button>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-10">
            <div class="row">
                <!-- Pie Charts -->
                <div class="col-md-4">
                    <canvas id="pieChart1"></canvas>
                </div>
                <div class="col-md-4">
                    <canvas id="pieChart2"></canvas>
                </div>
                <div class="col-md-4">
                    <canvas id="pieChart3"></canvas>
                </div>
            </div>
            <div class="row mt-4">
                <!-- Bar Graph -->
                <div class="col-md-12">
                    <canvas id="barGraph"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Pie Chart 1
        var ctx1 = document.getElementById('pieChart1').getContext('2d');
        var pieChart1 = new Chart(ctx1, {
            type: 'pie',
            data: {
                labels: ['Female', 'Male'],
                datasets: [{
                    data: [20, 30],
                    backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56']
                }]
            }
        });

        // Pie Chart 2
        var ctx2 = document.getElementById('pieChart2').getContext('2d');
        var pieChart2 = new Chart(ctx2, {
            type: 'pie',
            data: {
                labels: ['Tackat ja', 'Tackat nej', 'Erbjuden plats'],
                datasets: [{
                    data: [15, 25, 35],
                    backgroundColor: ['#4BC0C0', '#9966FF', '#FF9F40']
                }]
            }
        });

        // Pie Chart 3
        var ctx3 = document.getElementById('pieChart3').getContext('2d');
        var pieChart3 = new Chart(ctx3, {
            type: 'pie',
            data: {
                labels: ['Reell Kompetens', 'Ej Behörig', 'Behörig'],
                datasets: [{
                    data: [5, 10, 15],
                    backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56']
                }]
            }
        });

        // Bar Graph for Age Distribution
        var ctx4 = document.getElementById('barGraph').getContext('2d');
        var barGraph = new Chart(ctx4, {
            type: 'bar',
            data: {
                labels: ['20-24', '25-28', '29-32', '33-36', '37-40', '41-44', '45-48', '49-52', '53-56', '57-60'],
                datasets: [{
                    label: 'Age Distribution',
                    backgroundColor: 'rgba(75,192,192,0.4)',
                    borderColor: 'rgba(75,192,192,1)',
                    data: [12, 19, 3, 5, 2, 3, 7, 8, 6, 4]
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Event listener for Generate Data button
        document.getElementById('generateDataButton').addEventListener('click', function () {
            // Add your data generation logic here
            alert('Generate Data button clicked!');
        });
    </script>
}





